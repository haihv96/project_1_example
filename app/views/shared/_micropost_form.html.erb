<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t(".content") %>
  </div>
  <span class="picture">
    <%= f.file_field :picture, accept: Settings.micropost.accept %>
  </span>
  <%= f.submit t(".post"), class: "btn btn-primary" %>
<% end %>
