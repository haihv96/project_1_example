<% provide :title, t("words.change_password") %>
<h1><%= t "words.change_password" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for current_user, url: password_update_users_path, method: :patch do
    |f| %>
      <%= render "shared/error_messages", object: current_user %>
      <%= f.label :current_password %>
      <%= f.password_field :current_password, class: "form-control" %>

      <%= f.label :new_password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :new_password_confirmation %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("words.change_password"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
